<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintAppointmentOption"
    android:background="@color/layoutBgcolor"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context  = ".fragment.AppointmentOption">


    <Button
        android:id="@+id/btn_bookAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        app:layout_constraintBottom_toTopOf="@+id/btn_seeCurrentAppointment"
        app:layout_constraintEnd_toEndOf="@+id/btn_seeCurrentAppointment"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/btn_seeCurrentAppointment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />

    <Button
        android:id="@+id/btn_seeCurrentAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Current Appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bookAppointment" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>